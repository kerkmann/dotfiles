set $out1 eDP1
set $out2 HDMI
set $out3 VGA1
set $up k
set $down j
set $left h
set $right l
set $mod Mod4
set $term --no-startup-id kitty
set $WS01 "1"
set $WS02 "2"
set $WS03 "3"
set $WS04 "4"
set $WS05 "5"
set $WS06 "6"
set $WS07 "7"
set $WS08 "8"
set $WS09 "9"
set $WS10 "10"
set $WS11 "ï„ˆ"
floating_modifier $mod

#  _ _____                         _             _   _             
# (_)___ /       _ __   __ ___   _(_) __ _  __ _| |_(_) ___  _ __  
# | | |_ \ _____| '_ \ / _` \ \ / / |/ _` |/ _` | __| |/ _ \| '_ \ 
# | |___) |_____| | | | (_| |\ V /| | (_| | (_| | |_| | (_) | | | |
