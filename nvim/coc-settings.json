{
    "diagnostic.signOffset": 3000,
    "diagnostic.errorSign": "×",
    "diagnostic.warningSign": "",
    "diagnostic.infoSign": "ℹ",
    "diagnostic.hintSign": "•",
    "diagnostic.messageTarget": "echo",
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextPrefix": " ❯❯ ",

    "codeLens.enable": true,
    "coc.preferences.rootPatterns": [
        ".vim",
        ".git/",
        ".svn/",
        ".hg",
        ".projections.json"
    ],
    "coc.preferences.hoverTarget": "float",
    "coc.preferences.enableFloatHighlight": false,
    "coc.preferences.useQuickfixForLocations": false,

    "python.jediEnabled": false,

    "signature.enable": true,
    "signature.target": "echo",
    "signature.triggerSignatureWait": 300,

    "prettier.tabWidth": 4,
    "suggest.snippetIndicator": " ►",
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": ["--background-index"],
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".git/", ".hg/"],
            "filetypes": ["c", "cpp", "objc", "objcpp"]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": ["dockerfile"],
            "args": ["--stdio"]
        },
        "bash": {
            "command": "bash-language-server",
            "filetypes": ["sh"],
            "args": ["start"]
        }
    }
}
