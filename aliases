alias scrotsf="scrot '%H:%M-%d.%m.%Y-screenshot.png' -e 'mv \$f ~/Screenshots/' -u -d 5 -c"
alias scrots="scrot '%H:%M-%d.%m.%Y-screenshot.png' -e 'mv \$f ~/Screenshots/' -d 5 -c"
alias scrotsmd="scrot '%H:%M-%d.%m.%Y-screenshot.png' -e 'mv \$f ~/Screenshots/' -m"
alias dbrestart="dropbox-cli stop && dropbox-cli start"
alias mirrorupdate= "sudo reflector --verbose -l 20 -p https --sort rate --save /etc/pacman.d/mirrorlist"
